<li>
	<div class="item">
		<div class="left">
			<a href="/users/<%= follower.slug %>" title="<%= follower.name %>">
				<%= user_avatar_tag(follower, :small) %>
			</a>
		</div>
		<div class="right">
			<p><a href="<%= user_path(follower.slug) %>"><%= follower.name %></a></p>
			<p class="tagline"><%= follower.tagline %></p>
		</div>
	</div>
	<% if current_user %>
	<div class="action">
		<% if current_user.followed?(follower) %>
		<a href="#" onclick="return unfollow_user(this, '<%= follower.name %>');">取消关注</a>
		<% else %>
		<a href="#" onclick="return follow_user(this, '<%= follower.name %>');">关注</a>
		<% end %>
	</div>
	<% end %>
</li>